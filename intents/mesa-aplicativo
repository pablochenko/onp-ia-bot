const { Card, Suggestion, Payload } = require('dialogflow-fulfillment');

//const v_sedes = require('../json/sedes.json'); 

function mesa_menu(agent) {      
  const payload = lista_aplicativos();   
  agent.add(new Payload(agent.UNSPECIFIED , payload, {rawPayload: true, sendAsMessage: true}));
  
  agent.context.set({ name: 'set_mesa_appens_menu', lifespan: 1, parameters: {} });
  agent.context.set({ name: 'set_menu', lifespan: 1, parameters: {} });
  agent.context.set({ name: 'set_finalizar', lifespan: 1, parameters: {} });
}  


function mesa_appens_menu(agent){
  //let item = agent.parameters.boteta_fec_emision;
  let aplicaciones = [];
  aplicaciones.push([{"text": "Lentitud en APPENS","callback_data":"APPENS_1"},{"text": "Mover Token","callback_data":"APPENS_2"}]);
  aplicaciones.push([{"text": "Reasignar documentos","callback_data":"APPENS_3"},{"text": "Reemplazar documentos","callback_data":"APPENS_4"}]);
  aplicaciones.push([{"text": "Inoperar solicitudes","callback_data":"APPENS_5"}]);    
  aplicaciones.push([{"text": "Regresar al men煤 principal","callback_data": "menu"}]);
  aplicaciones.push([{"text": "Finalizar conversaci贸n","callback_data": "finalizar"}]);
  const payload = {
      "telegram": {
          "text": 'Por favor seleccione una opci贸n:',
          "reply_markup": {
            "inline_keyboard": aplicaciones
          },
          "parse_mode": "HTML"
        }
      };  
  agent.add(new Payload(agent.UNSPECIFIED , payload, {rawPayload: true, sendAsMessage: true}));
  
  agent.context.set({ name: 'set_mesa_appens_respuesta', lifespan: 1, parameters: {} });
  agent.context.set({ name: 'set_menu', lifespan: 1, parameters: {} });
  agent.context.set({ name: 'set_finalizar', lifespan: 1, parameters: {} });
}


function mesa_appens_respuesta(agent) {   
  let item = agent.parameters.app_id_problema;
  let text = '';
  switch (item) {
    case "APPENS_1":
      text = 'Estimado/a usuario/a, si el incidente lo presentan varios usuarios, por favor genere un ticket de atenci贸n. \nSi el problema es solo en su equipo, debe limpiar los archivos temporales de internet. \nEn caso de persistir con el problema, por favor genere un ticket de atenci贸n.';
      break;
    case "APPENS_2":
      text = 'Estimado/a usuario/a, las solicitudes de movimiento de Token deben ser remitidas por su lider usuario al correo EQAPPENSOTI@onp.gob.pe';      
      break;
    case "APPENS_3":
      text = 'Estimado/a usuario/a, por favor genere un ticket de atenci贸n.';   
      break; 
    case "APPENS_4":
      text = 'Estimado/a usuario/a, por favor genere un ticket de atenci贸n.';   
      break;  
    case "APPENS_5":
      text = 'Estimado/a usuario/a, por favor genere un ticket de atenci贸n.';   
      break;
  }
  
  let menu = [];
  menu.push([{"text": "Generar ticket de atenci贸n","callback_data":"http://onpsrvaraweb12.onp.net/USDKV8/index.aspx#/home/kb"}]);    
  menu.push([{"text": "Regresar al men煤 principal","callback_data": "menu"}]);
  menu.push([{"text": "Finalizar conversaci贸n","callback_data": "finalizar"}]);
  const payload = {
    "telegram": {
        "text": text,
        "reply_markup": {
          "inline_keyboard": menu
        },
        "parse_mode": "HTML"
      }
    };  
  agent.add(new Payload(agent.UNSPECIFIED , payload, {rawPayload: true, sendAsMessage: true}));

  
  //agent.context.set({ name: 'set_mesa_appens_menu', lifespan: 1, parameters: {} });
  agent.context.set({ name: 'set_menu', lifespan: 1, parameters: {} });
  agent.context.set({ name: 'set_finalizar', lifespan: 1, parameters: {} });

}




